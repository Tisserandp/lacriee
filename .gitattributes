# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf

# SQL files
*.sql text eol=lf

# Markdown files
*.md text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
Dockerfile text eol=lf

# Windows specific
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.pdf binary
*.xlsx binary
*.xls binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar.gz binary
